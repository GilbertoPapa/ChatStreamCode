<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gilbertopapa.chatstreamcode.MainActivity">



    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.gilbertopapa.chatstreamcode.helper.SlidingTabLayout
        android:id="@+id/slt_tabs"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.gilbertopapa.chatstreamcode.helper.SlidingTabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_page"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
