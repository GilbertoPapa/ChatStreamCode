<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.gilbertopapa.chatstreamcode.RegisterUserActivity">

    <ImageView
        android:id="@+id/imageViewRegister"
        android:layout_width="200dp"
        android:layout_height="163dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        app:srcCompat="@drawable/usuario" />

    <EditText
        android:id="@+id/edtNameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Digite Seu Nome."
        android:inputType="textPersonName"
        android:textColor="@color/colorText" />

    <EditText
        android:id="@+id/edtPhoneId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtLocaleId"
        android:layout_alignBottom="@+id/edtLocaleId"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/edtLocaleId"
        android:ems="10"
        android:hint="9999999999"
        android:inputType="phone"
        android:textColor="@color/colorText" />

    <EditText
        android:id="@+id/edtLocaleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNameId"
        android:layout_toEndOf="@+id/edtCountryId"
        android:ems="2"
        android:hint="11"
        android:inputType="phone"
        android:textColor="@color/colorText" />

    <EditText
        android:id="@+id/edtCountryId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtNameId"
        android:layout_below="@+id/edtNameId"
        android:ems="2"
        android:hint="+55"
        android:inputType="phone"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/btnRegisterId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtPhoneId"
        android:layout_alignStart="@+id/edtCountryId"
        android:layout_below="@+id/edtPhoneId"
        android:layout_marginTop="54dp"
        android:background="@color/colorPrimaryDark"
        android:text="Cadastrar"
        android:textColor="@color/colorText"
        />

    <EditText
        android:id="@+id/edtEmailLoginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtPhoneId"
        android:layout_alignStart="@+id/btnRegisterId"
        android:layout_below="@+id/edtPhoneId"
        android:ems="10"
        android:hint="Digite seu email."
        android:inputType="textEmailAddress"
        android:textColor="@color/colorText" />

</RelativeLayout>
