<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.gilbertopapa.chatstreamcode.AuthenticatorActivity">

    <ImageView
        android:id="@+id/imageViewAuth"
        android:layout_width="200dp"
        android:layout_height="163dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_above="@+id/tvAuth"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtCodeAthId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:ems="7"
        android:hint="Digite o código."
        android:inputType="textPersonName"
        android:textColor="@color/colorText"
        android:layout_below="@+id/tvAuth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />



    <TextView
        android:id="@+id/tvAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Você recebeu um SMS contendo seu código de validação, digite abaixo:"
        android:textColor="@color/colorText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAthId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Validar"
        android:textColor="@color/colorText"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/edtCodeAthId"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
